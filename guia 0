    public static void operaciones(int numX, int numY, double numN, double numM) {
        double suma = numM + numX;
        double resta = numN - numY;
        double multiplicacion = numX * numY;
        double division = numX / numN;

        System.out.println(suma);
        System.out.println(resta);
        System.out.println(multiplicacion);
        System.out.println(division);

    }
    public static void controlUsuario ()
    {
        Scanner numero = new Scanner(System.in);
        System.out.println("Ingrese un numero: ");
        int N = numero.nextInt();
        numero.nextLine(); //ASEGURA EL "ENTER"

        int suma = N + 77;
                int resta = N - 3;
        int duplica = N * 2;
                System.out.println("El numero incrementado 77: "+ suma);
        System.out.println("El numero menos 3: "+ resta);
        System.out.println("El numero por 2: "+ duplica);





    }

    public static void numeroPoN()
    {
        Scanner positivoOnegativo = new Scanner(System.in);
        System.out.println("Ingrese un numero: ");
        int B = positivoOnegativo.nextInt();
        positivoOnegativo.nextLine();

        if (B < 0)
        {
            System.out.println("El numero es negativo");

        } else {
            System.out.println("El numero es positivo");
        }
    }

    public static void metodo7()
    {
        Scanner caracter = new Scanner(System.in);
        System.out.println("Ingrese una palabra: ");
        //Scanner.next().charAt(0);
        char letras = caracter.nextLine().charAt(0);

        System.out.println((int)(letras));


    }

    public static void metodo8()
    {
        Scanner scan = new Scanner(System.in);
        System.out.println("Ingrese un numero");
        int C = scan.nextInt();
        scan.nextLine();

        if(C < 0)
        {
            System.out.println("El numero es negativo");
        } else {
            System.out.println("El numero es positivo");
        }
        if (C % 2 == 0)
        {
            System.out.println("El numero es par");
        } else {
            System.out.println("El numero es impar");
        }
        if (C % 5 == 0)
        {
            System.out.println("El numero es MULTIPLO DE 5");
        } else {
            System.out.println("El numero no es multiplo de 5");
        }
        if (C % 10 == 0)
        {
            System.out.println("El numero es MULTIPLO DE 10");
        } else {
            System.out.println("El numero no es multiplo de 10");
        }
        if (C > 100)
        {
            System.out.println("El numero es mayor a 100");
        } else
        {
            System.out.println("El numero es menor a 100");
        }
    }

